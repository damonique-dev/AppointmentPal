<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#3b5997"
                tools:context="com.paul_nikki.cse5236.appointmentpal.ConfirmAppointmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Appointment"
        android:id="@+id/lbl_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Selected Appointment:"
        android:id="@+id/lbl_selected"
        android:layout_below="@+id/lbl_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8:00 AM Monday, October 12th, 2015"
        android:id="@+id/lbl_confirmWhen"
        android:layout_below="@+id/lbl_selected"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dr. Smith - Dublin Office"
        android:id="@+id/lbl_confirmWhere"
        android:layout_below="@+id/lbl_confirmWhen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/btn_confirmAppt"
        android:textSize="25dp"
        android:background="@color/darkgreen"
        android:layout_below="@+id/btn_mapConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/btn_mapConfirm"
        android:background="@color/darkgreen"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/lbl_confirmWhen"
        android:layout_alignEnd="@+id/lbl_confirmWhen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;- Calender"
        android:id="@+id/btn_backToCalender"
        android:textSize="25dp"
        android:background="@color/darkgreen"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lbl_header"
        android:layout_alignStart="@+id/lbl_header"/>



</RelativeLayout>
