<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#3b5997"
                tools:context="com.paul_nikki.cse5236.appointmentpal.NewAppointmentActivity"
                android:id="@+id/newAppointmentActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Appointment"
        android:id="@+id/lbl_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a Location:"
        android:id="@+id/lbl_chooseLocation"
        android:textColor="@color/white"
        android:layout_below="@+id/lbl_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ddlLocations"
        android:layout_below="@+id/lbl_chooseLocation"
        android:layout_alignLeft="@+id/lbl_header"
        android:layout_alignStart="@+id/lbl_header"
        android:spinnerMode="dropdown"
        android:popupBackground="#36648B"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a Doctor:"
        android:id="@+id/lbl_chooseDoctor"
        android:textColor="@color/white"
        android:layout_below="@+id/ddlLocations"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ddlDoctors"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/lbl_chooseDoctor"
        android:layout_alignLeft="@+id/ddlLocations"
        android:layout_alignStart="@+id/ddlLocations"
        android:popupBackground="#36648B"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Choose from Schedule"
            android:id="@+id/btn_fromSchedule"
            android:textSize="25dp"
            android:background="@color/darkgreen"
            android:textColor="@color/white"
            android:layout_marginTop="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Back"
        android:id="@+id/btn_firstAvailable"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@color/grey"/>


  </LinearLayout>

</RelativeLayout>
