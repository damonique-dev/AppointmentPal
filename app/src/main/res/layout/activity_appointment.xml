<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.paul_nikki.cse5236.appointmentpal.AppointmentActivity"
                android:background="#3b5997">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Appointment Details"
        android:id="@+id/lbl_headerr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:id="@+id/lbl_date"
        android:layout_below="@+id/lbl_headerr"
        android:layout_marginTop="38dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Doctor:"
        android:id="@+id/lbl_doctor"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="@color/white"
        android:layout_below="@+id/lbl_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location:"
        android:id="@+id/lbl_location"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/lbl_doctor"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel Appointment"
            android:id="@+id/btn_editAppt"
            android:textSize="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/red"
            android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Back"
        android:id="@+id/btn_bacc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/grey"
        android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>
